<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.EditProfil.EditProfilActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tombol Back -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="Kembali"
                android:src="@drawable/ic_icon_back" />

            <!-- Judul -->
            <TextView
                android:id="@+id/lengkapiDataCust"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profil"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Input Fields -->
            <EditText
                android:id="@+id/NIK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#0D6EFD"
                android:hint="Nik"
                android:inputType="text"
                android:padding="14dp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/TempatLahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#0D6EFD"
                android:hint="Tempat Lahir"
                android:inputType="text"
                android:padding="14dp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/TanggalLahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#0D6EFD"
                android:hint="Tanggal Lahir"
                android:inputType="none"
                android:padding="14dp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:focusable="false"/>

            <TextView
                android:id="@+id/Jk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jenis Kelamin"
                android:inputType="none"
                android:padding="14dp"
                android:textSize="18dp"
                android:textColor="#000000"
                android:focusable="false"/>

            <Spinner
                android:id="@+id/JenisKelamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#0D6EFD"
                android:padding="14dp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:popupBackground="@color/white"
                android:hint="Jenis Kelamin"
                android:spinnerMode="dropdown" />

            <EditText
                android:id="@+id/Telepon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#0D6EFD"
                android:hint="No. Telepon"
                android:inputType="phone"
                android:padding="14dp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/Alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#0D6EFD"
                android:hint="Alamat"
                android:inputType="textMultiLine"
                android:padding="14dp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/IbuKandung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#0D6EFD"
                android:hint="Nama Ibu Kandung"
                android:inputType="text"
                android:padding="14dp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/Pekerjaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#0D6EFD"
                android:hint="Pekerjaan"
                android:inputType="text"
                android:padding="14dp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/Gaji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#0D6EFD"
                android:hint="Gaji"
                android:inputType="number"
                android:padding="14dp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/Rekening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#0D6EFD"
                android:hint="No. Rekening"
                android:inputType="number"
                android:padding="14dp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/StatusRumah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#0D6EFD"
                android:hint="Status Rumah"
                android:inputType="text"
                android:padding="14dp"
                android:textColor="#000000"
                android:layout_marginBottom="32dp" />

            <!-- Tombol Submit -->
            <Button
                android:id="@+id/btnAddDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_gradient"
                android:fontFamily="sans-serif-medium"
                android:padding="14dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="35dp" />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
